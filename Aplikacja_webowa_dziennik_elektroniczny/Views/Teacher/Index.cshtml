@model dziennik_elektroniczny.Application.ViewModels.VmForDisplay.ListTeachersForListVm

@{
    ViewData["Title"] = "Index";
}

<h1>Class 1A</h1>

<div class="flex">
    <div>
        <a class="nav-link text-dark" asp-area="" asp-controller="Teacher" asp-action="TeacherAddresses">Teacher Addresses</a>
    </div>
</div>
<style>
    table {
        text-align: center;
    }
    .flex{
        display: flex;
    }
    .next{
        font-weight: bold;
    }
    th {
        border: 1px solid;
        padding: 10px;
    }

    td {
        border: 1px solid;
        padding: 10px;
    }
</style>
<form asp-action="Index" asp-controller="Teacher" method="post">

    <table class="table">

        <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Category
            </th>
            <th>
                Years of teaching
            </th>
            <th>
                Phone number
            </th>
            <th>
                Email
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YearsOfTeaching)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="row">
        <table>
            <tr>
                @for (int i = 1; i < (Math.Ceiling(Model.Count / (double)Model.PageSize) + 1); i++)
                {
                    <td style="border: 0px; padding: 0px; width: 10px; height: 100px; font-size: 20px">
                        @if (i != Model.CurrentPage)
                        {
                            <a href="javascript:PagerClick(@i)">@i</a>
                        }
                        else
                        {
                            <span>@i</span>
                        }
                    </td>
                }
            </tr>
        </table>
        <input type="hidden" name="pageNo" id="pageNo" />
        <input type="hidden" name="pageSize" id="pageSize" value="10" />
    </div>
</form>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}